<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BookRankMapper">
   
    <!-- Beans 클래스의 객체이름(id)과 클래스이름(type)을 명시한다. -->
    <resultMap id="BookRankMap" type="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank">
        <!-- Beans의 멤버변수(property)이름과 대상 테이블의 컬럼(column)을 연결한다. -->
        <result property="RankNo" column="RankNo" />
        <result property="userno" column="userno" />
        <result property="isbn" column="isbn" />
           <result property="value" column="value" />
    </resultMap>
    
    <!-- 단일행 조회를 위한 기능 정의 -->
    <select id="selectItem"
            parameterType="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank" 
            resultMap="BookRankMap">
        <!-- "#{변수명}" 으로 표시된 곳에 멤버변수가 치환된다. -->
	select RankNo, userno, isbn, value from BookRank where RankNo=#{RankNo};

    </select>
    
    
      <!-- 단일행 조회를 위한 기능 정의 -->
    <select id="selectItembyUserId"
            parameterType="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank" 
            resultMap="BookRankMap">
        <!-- "#{변수명}" 으로 표시된 곳에 멤버변수가 치환된다. -->
	select RankNo, userno, isbn ,value from BookRank where userno=#{userno};

    </select>
    
              <!-- 단일행 조회를 위한 기능 정의 -->
    <select id="selectListbyIsbn"
            parameterType="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank" 
            resultMap="BookRankMap">
        <!-- "#{변수명}" 으로 표시된 곳에 멤버변수가 치환된다. -->
	select RankNo, userno, isbn ,value from bookRank where isbn=#{isbn};

    </select>
    
    <!-- 다중행 조회를 위한 기능 정의 -->
   <select id="selectList" 
            parameterType="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank" 
            resultMap="BookRankMap">
        <!-- 이 안에서 처리할 SQL문을 명시한다. -->

	select RankNo, userno, isbn, value from BookRank;

    </select>
    
    <!-- 데이터 수 조회를 위한 기능 정의 -->
    <select id="selectCount" 
            parameterType="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank" 
            resultType="int">
        <!-- 이 안에서 처리할 SQL문을 명시한다. -->
   	select count(*) from BookRank where userno=#{userno} and isbn=#{isbn};

    </select>
    
    
    <!-- 데이터 저장을 위한 기능 정의 -->
    <insert id="insertItem" 
            parameterType="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank" 
            useGeneratedKeys="true"
            keyProperty="RankNo">
        <!-- "#{변수명}" 으로 표시된 곳에 Beans의 멤버변수가 치환된다. -->
    insert into BookRank (userno, isbn, value) values ( #{userno}, #{isbn}, #{value});
    
    </insert>
    
    
    <!-- 데이터 삭제를 위한 기능 정의 -->
    <delete id="deleteItem" parameterType="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank">
        <!-- 이 안에서 처리할 SQL문을 명시한다. -->
    delete from BookRank where userno=#{userno} and isbn=#{isbn};
    </delete>
    
     <!-- 데이터 갱신을 위한 기능 정의 -->
    <update id="updateItem" parameterType="pocketLib.spring.pocketLibSpring.mybatis.model.BookRank">
        <!-- 이 안에서 처리할 SQL문을 명시한다. -->
    update bookRank set value=#{value} where userno=#{userno} and isbn=#{isbn};
    </update>
   
</mapper>